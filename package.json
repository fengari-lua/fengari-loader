{
  "name": "fengari-loader",
  "version": "0.0.0",
  "description": "Webpack loader for fengari",
  "repository": "https://github.com/fengari-lua/fengari-loader.git",
  "contributors": [
    "Daurnimator <quae@daurnimator.com>"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint src/ test/",
    "test": "jest"
  },
  "main": "src/fengari-loader.js",
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.13.0",
    "jest": "^21.2.1",
    "memory-fs": "^0.4.1"
  },
  "peerDependencies": {
    "fengari-web": "^0.0",
    "webpack": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "fengari": "^0.0",
    "loader-utils": "^1.1.0",
    "schema-utils": "^0.4.2"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "semi": [
        "error",
        "always"
      ]
    },
    "overrides": [
      {
        "files": [
          "test/*.js"
        ],
        "env": {
          "jest": true
        },
        "parserOptions": {
          "ecmaVersion": 8,
          "sourceType": "module"
        }
      }
    ]
  }
}
